BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button: 
            text: 'Clear'
            on_press: app.clear_fields()
            size_hint_x: 0.2
        TextInput:
            id: input_name
            text: ''
    BoxLayout:
        orientation: 'horizontal'
        Button: 
            text: 'Greet'
            on_press: app.handle_greet()
            size_hint_x: 0.2
        Label:
            id: output_label
            text: 'Enter your name'
            color: (1, 1, 0, 1)