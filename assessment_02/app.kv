BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.3
        Label:
            text: 'Sort by:'
        Spinner:
            text: app.first_sort_method
            values: app.sort_methods
            on_text: app.set_sort_method(self.text)
        Label:
            text: 'Add New Place...'
        Label:
            text: 'Name:'
        TextInput:
            id: name_field
            multiline: False
            write_tab: False
        Label:
            text: 'Country:'
        TextInput:
            id: country_field
            multiline: False
            write_tab: False
        Label:
            text: 'Priority:'
        TextInput:
            id: priority_field
            multiline: False
            write_tab: False
        Button:
            text: 'Add Place'
            on_press: app.add_place_to_collection()
        Button:
            text: 'Clear'
            on_press: app.clear_fields()
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: to_visit_counter
            size_hint_y: 0.1
            text: ''
        BoxLayout:
            orientation: 'vertical'
            id: places_container
        Label:
            id: status
            size_hint_y: 0.1
            text: 'Welcome to Travel Checker 2.0'